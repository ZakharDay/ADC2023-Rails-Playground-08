<%#
  if request.base_url + request.original_fullpath == root_url
    title = "Тестовый сайт"
  end

  if @title
    @title = [@title, title].join(" | ")
  else
    @title = "Тестовый сайт"
  end
%>

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%#= @title %>
    <%#= yield :head %>

    <%= display_meta_tags site: "Тестовый сайт", reverse: true %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%#= javascript_importmap_tags %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <%= render 'menubar' %>
    <%= render 'cartbar' %>

    <div>
      <%= SecureRandom.uuid %>
    </div>

    <section class="contentArea">
      <%= yield %>
    </section>
    
    <%= render 'footer' %>

    <%= render 'notifications' %>
  </body>
</html>
