<%= turbo_frame_tag dom_id(comment) do %>
<div class="comment" id="<%= dom_id comment %>">
  <p>
    <strong>
      <%= comment.user.email %>
    </strong>
  </p>

  <p>
    <%= comment.body %>
  </p>

  <%# if can? :manage, comment %>
  
    <div>
      <%= link_to "Edit this comment", edit_pin_comment_path(comment.pin, comment) %>
      <%#= button_to "Destroy this comment", [pin, comment], method: :delete %>
    </div>

  <%# end %>

  <div class="commentReplies">
    <% comment.replies.each do |reply| %>
      <%= render reply, partial: "comments/comment", comment: reply, pin: pin %>
    <% end%>
  </div>
</div>
<% end %>