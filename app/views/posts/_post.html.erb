<div id="<%= dom_id post %>">
  <p>
    <strong>Type:</strong>
    <%= post.type %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Url:</strong>
    <%= post.url %>
  </p>

  <p>
    <%= link_to "Show this post", post %>
  </p>

</div>
