<%
  video_url = /^.*(youtu\.be\/|vi?\/|u\/\w\/|embed\/|\?vi?=|\&vi?=)([^#\&\?]*).*/.match(video_post.url)[2]
%>

<div class="post">
  <h2>
    <a href="<%= post_path(video_post) %>">
      <%= video_post.title %>
    </a>
  </h2>

  <p><%= video_post.body %></p>

  <iframe
    width="560"
    height="315"
    src="https://www.youtube.com/embed/<%= video_url %>"
    title="YouTube video player"
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen>
  </iframe>
</div>